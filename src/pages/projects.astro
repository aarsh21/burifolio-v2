---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import Link from '@/components/Link.astro'
import Layout from '@/layouts/Layout.astro'
import { Projects as projectsData } from '@/lib/profiledetail'

interface Project {
  project: string;
  details: string[];
  link: string;
}
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Projects" />
  <Breadcrumbs items={[{ label: 'Projects', icon: 'lucide:briefcase' }]} />
  <section class="flex flex-col gap-y-4">
    <div class="font-medium">Some of my recent work</div>
    <div class="flex flex-col gap-4">
      {projectsData.map((project: Project) => (
        <div class="hover:bg-secondary/50 rounded-xl border p-4 transition-colors duration-300 ease-in-out">
          <Link href={project.link} class="flex flex-col gap-3" external>
            <div>
              <h3 class="mb-2 text-lg font-medium">{project.project}</h3>
              <div class="text-muted-foreground text-sm space-y-2">
                {project.details.map((detail) => (
                  <p>{detail}</p>
                ))}
              </div>
            </div>
          </Link>
        </div>
      ))}
    </div>
  </section>
</Layout>
