---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
import { getSortedTags } from '@/lib/data-utils'
import { Icon } from 'astro-icon/components'

const sortedTags = await getSortedTags()
const totalPosts = sortedTags.reduce((acc, { count }) => acc + count, 0)
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Tags" />
  <Breadcrumbs items={[{ label: 'Tags', icon: 'lucide:tags' }]} />

  <div class="flex flex-col gap-8">
    <!-- Header card -->
    <div class="relative">
      <!-- Corner accents -->
      <div
        class="absolute -top-1 -left-1 h-3 w-3 border-t-2 border-l-2 border-accent"
      >
      </div>
      <div
        class="absolute -top-1 -right-1 h-3 w-3 border-t-2 border-r-2 border-accent"
      >
      </div>
      <div
        class="absolute -bottom-1 -left-1 h-3 w-3 border-b-2 border-l-2 border-accent"
      >
      </div>
      <div
        class="absolute -bottom-1 -right-1 h-3 w-3 border-b-2 border-r-2 border-accent"
      >
      </div>

      <div class="border-2 border-border bg-card p-6 shadow-brutal">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-black uppercase tracking-tight">
              // All Tags
            </h1>
            <p class="text-muted-foreground font-mono text-sm mt-1">
              <span class="text-accent">&gt;</span> Browse posts by topic
            </p>
          </div>
          <div
            class="hidden sm:flex flex-col items-end gap-1 font-mono text-xs"
          >
            <span class="px-2 py-1 bg-muted border-2 border-border">
              {sortedTags.length} tags
            </span>
            <span class="px-2 py-1 bg-accent/10 border-2 border-accent/30">
              {totalPosts} posts
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Tags grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
      {
        sortedTags.map(({ tag, count }, index) => (
          <Link
            href={`/tags/${tag}`}
            class="group relative border-2 border-border bg-card p-4 shadow-brutal brutal-hover transition-all"
          >
            <div class="flex items-center justify-between gap-4">
              <div class="flex items-center gap-3 min-w-0">
                <span class="flex-shrink-0 w-8 h-8 flex items-center justify-center bg-muted border-2 border-border font-mono text-xs font-bold">
                  {String(index + 1).padStart(2, '0')}
                </span>
                <div class="flex items-center gap-1.5 min-w-0">
                  <Icon
                    name="lucide:hash"
                    class="size-4 text-accent flex-shrink-0"
                  />
                  <span class="font-bold uppercase tracking-wide truncate group-hover:text-accent transition-colors">
                    {tag}
                  </span>
                </div>
              </div>
              <div class="flex items-center gap-2">
                <span class="px-2 py-0.5 bg-accent text-accent-foreground font-mono text-xs font-bold">
                  {count}
                </span>
                <Icon
                  name="lucide:arrow-right"
                  class="size-4 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all"
                />
              </div>
            </div>
          </Link>
        ))
      }
    </div>

    <!-- Footer decoration -->
    <div
      class="flex items-center justify-center gap-4 text-muted-foreground/50 font-mono text-xs py-4"
    >
      <span class="h-px w-8 bg-border"></span>
      <span>END_OF_TAGS</span>
      <span class="h-px w-8 bg-border"></span>
    </div>
  </div>
</Layout>
