---
import '@/styles/global.css'
import '@/styles/typography.css'

import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import Header from '@/components/Header.astro'
import { SITE } from '@/consts'
import { cn } from '@/lib/utils'

interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<!doctype html>
<html class="bg-background text-foreground" lang={SITE.locale}>
  <Head>
    <slot name="head" />
    <script
      is:inline
      defer
      src="https://analytics.hyorinmaru.me/script.js"
      data-website-id="be1b6d6e-0876-42d9-8751-a8d0055d2992"></script>
  </Head>
  <body class="relative">
    <!-- Noise texture overlay -->
    <div class="noise pointer-events-none fixed inset-0 z-50"></div>

    <div class="flex h-fit min-h-screen flex-col font-mono">
      <div
        class="bg-background/80 sticky top-0 z-40 backdrop-blur-md xl:divide-none"
      >
        <Header />
        <slot name="subposts-navigation" />
        <slot name="table-of-contents" />
      </div>

      <main class="grow">
        <div
          class={cn(
            'mx-auto flex grow flex-col gap-y-8 px-4 py-8 animate-in-up',
            className,
          )}
        >
          <slot />
        </div>
      </main>

      <Footer />
    </div>
  </body>
</html>
