---
import { getCombinedReadingTime } from '@/lib/data-utils'
import { formatDate } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'
import Link from './Link.astro'

interface Props {
  entry: CollectionEntry<'blog'>
}

const { entry } = Astro.props
const formattedDate = formatDate(entry.data.date)
const readTime = await getCombinedReadingTime(entry.id)
---

<article class="brutal-hover group border-2 border-foreground bg-background transition-all">
  <Link
    href={`/${entry.collection}/${entry.id}`}
    class="flex flex-col gap-0"
  >
    {
      entry.data.image && (
        <div class="relative overflow-hidden border-b-2 border-foreground">
          <Image
            src={entry.data.image}
            alt={entry.data.title}
            width={1200}
            height={630}
            class="aspect-video w-full object-cover grayscale transition-all duration-500 group-hover:scale-105 group-hover:grayscale-0"
          />
          <!-- Overlay -->
          <div class="absolute inset-0 bg-foreground/10 mix-blend-multiply transition-opacity group-hover:opacity-0"></div>
        </div>
      )
    }

    <div class="p-4 sm:p-5">
      <!-- Meta info bar -->
      <div class="mb-3 flex flex-wrap items-center gap-2 text-xs font-medium uppercase tracking-wide text-muted-foreground">
        <span class="flex items-center gap-1">
          <Icon name="lucide:calendar" class="h-3 w-3" />
          {formattedDate}
        </span>
        <span class="text-foreground/30">/</span>
        <span class="flex items-center gap-1">
          <Icon name="lucide:clock" class="h-3 w-3" />
          {readTime}
        </span>
      </div>
      
      <!-- Title -->
      <h3 class="mb-2 text-lg font-bold uppercase tracking-tight transition-colors group-hover:text-accent sm:text-xl">
        {entry.data.title}
      </h3>
      
      <!-- Description -->
      <p class="mb-4 text-sm text-muted-foreground line-clamp-2">
        {entry.data.description}
      </p>

      <!-- Tags -->
      {
        entry.data.tags && entry.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {entry.data.tags.map((tag) => (
              <span class="inline-flex items-center gap-1 border border-foreground bg-muted px-2 py-0.5 text-xs font-medium uppercase">
                <span class="text-accent">#</span>
                {tag}
              </span>
            ))}
          </div>
        )
      }
      
      <!-- Read more indicator -->
      <div class="mt-4 flex items-center gap-2 text-xs font-bold uppercase tracking-wide opacity-60 transition-opacity group-hover:opacity-100">
        <span>Read Article</span>
        <Icon name="lucide:arrow-right" class="h-3 w-3 transition-transform group-hover:translate-x-1" />
      </div>
    </div>
  </Link>
</article>
