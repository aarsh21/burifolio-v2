---
// WorkItem.astro - A component to render individual work experience items
interface Props {
  position: string;
  company: string;
  link: string;
  start_date: string;
  end_date: string;
  content: string;
}

const { position, company, link, start_date, end_date, content } = Astro.props;
import Link from './Link.astro';
---

<div class="relative rounded-lg border p-6">
  <div class="mb-4 flex flex-col gap-2 sm:flex-row sm:items-start sm:justify-between">
    <div>
      <h3 class="text-lg font-semibold">
        <Link href={link} external underline>
          {position}
        </Link>
      </h3>
      <p class="text-muted-foreground">{company}</p>
    </div>
    <div class="flex flex-col text-sm sm:text-right">
      <span class="text-muted-foreground">
        {start_date} - {end_date}
      </span>
    </div>
  </div>

  <div set:html={content} class="prose prose-sm text-muted-foreground max-w-none prose-ul:pl-6 prose-ul:space-y-2" />
</div>
